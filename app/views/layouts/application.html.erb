<!DOCTYPE html>
<html>
<head>
  <title>Prototype Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= google_webfonts_init({
    # popular fonts : 'Roboto', 'Roboto Condensed', 'Raleway', 'Playfair Display', 'Poppins', 'Arimo', 'Ubuntu', 'Montserrat', 'Oswald'
    google: ['Ubuntu','Montserrat','Raleway']
  }) %>

</head>
<body>
  <%= render 'layouts/navigationbar' %>
  <%= render 'layouts/messages' %>
<main class="main-content"<% if !current_page?(:controller => 'articles', :action => 'home') %>style="margin-bottom:30px";<% end %>>
<%= yield %>
</main>
 <%= render 'layouts/footer' %>
</body>
</html>
