<% if @article.errors.any? %>
<h2>The following errors occured:</h2>
    <ul class="errors">
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>
<%= form_for @article do |f| %>
    <div class="form-group">
        <%= f.label :title %><br/>
        <%= f.text_field :title,class:"form-control",placeholder:"Enter title" %>
    </div>
    <div class="form-group">
        <%= f.label :description %><br/>
        <%= f.text_area :description,class:"form-control",placeholder:"Enter description",cols:"100%",rows:"10" %>
    </div>
    <div class="form-group">
        <%= f.submit class:'btn btn-md btn-primary' %>
        <%= link_to 'Back to all articles',articles_path,class:'btn btn-md btn-primary' %>
    </div>
<% end %>


